@model IEnumerable<ReportReadVM>


<div class="container my-5">
  <h1 class="display-4 text-center mb-4">Reports</h1>

    <form method="get" action="@Url.Action("Index")">
        <div class="form-group w-50">
            <label for="userName">User Name:</label>
            <input type="text" id="userName" name="userName" class="form-control"/>
        </div>
        <div class="form-group w-50">
            <label for="number">Phone Number:</label>
            <input type="text" id="number" name="number" class="form-control"/>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <table class="table table-hover table-bordered text-center" width="100%">
    <thead class=" thead-dark">
    <tr>
        <th>Sender</th>
         <th> SubmissionId </th>
        <th>Phone Number</th>
        <th>Message Content</th>
        <th>Sending Date</th>
        <th>Status</th>
        <th>Details</th>

         
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SenderUsername</td>
            <td>@item.SubmissionId</td>
            <td>@item.PhoneNumber</td>
            <td>@item.MessageContent</td>
            <td>@item.SendingDate</td>
            <td>@item.Status</td>
            <td>@item.Details</td>
             
        </tr>

    }
   </table>
</div>